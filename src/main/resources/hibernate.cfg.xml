  <property name="show_sql">true</property>
<!--  <property name="logging.level.org.hibernate.SQL">OFF</property>-->

<!--  <property name = "hibernate.temp.use_jdbc_metadata_defaults">true</property>-->

<!--  &lt;!&ndash; Drop and re-create the database schema on startup &ndash;&gt;-->
<!--  <property name="hbm2ddl.auto">update</property>-->

  <!-- c3p0 connection pool -->
  <property name="hibernate.c3p0.min_size">1</property>
  <property name="hibernate.c3p0.max_size">100</property>
  <property name="hibernate.c3p0.timeout">200</property>
  <property name="hibernate.c3p0.max_statements">100</property>
  <property name="hibernate.c3p0.idle_test_period">5000</property>

  <mapping class="Model.AccountEntity" />
  <mapping class="Model.BusEntity" />
  <mapping class="Model.RouteEntity" />
