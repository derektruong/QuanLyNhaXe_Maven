  <mapping class="Model.RoleEntity"/>
  <mapping class="Model.RoleAccountEntity"/>
  <mapping class="Model.StationEntity"/>
  <mapping class="Model.TypeOfBusEntity"/>
  <mapping class="Model.ViewModel.BusEntity_ViewModel"/>

</session-factory>
</hibernate-configuration>