<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
  <!-- Database connection settings -->
  <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
<!--  <property name="connection.url">jdbc:sqlserver://34.72.153.240;database=QuanLyNhaXeKhach</property>-->
  <property name="connection.url">jdbc:sqlserver://34.87.114.154</property>
  <property name = "hibernate.connection.username">sqlserver</property>
  <property name = "hibernate.connection.password">123456</property>

  <property name="hibernate.connection.release_mode">auto</property>
  <property name="hibernate.connection.autoReconnect">true</property>
  <property name="hibernate.connection.autocommit">true</property>
<!--  &lt;!&ndash; JDBC connection pool (use the built-in) &ndash;&gt;-->
<!--  <property name="connection.pool_size">10</property>-->

<!--  &lt;!&ndash; SQL dialect &ndash;&gt;-->
  <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>

<!--  &lt;!&ndash; Enable Hibernate's automatic session context management &ndash;&gt;-->
<!--  <property name="current_session_context_class">thread</property>-->

